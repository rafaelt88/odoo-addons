<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="date_of_birth" optional="show"/>
                <field name="gender" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Patient Name"/></h1>
                    </div>
                    <group>
                        <group string="Basic Info">
                            <field name="gender"/>
                            <field name="weight" readonly="gender == 'female'"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>   
                        <group string="Personal Info">
                            <field name="date_of_birth"/>
                            <field name="is_minor"/>
                            <field name="guardian" invisible="not is_minor" required="is_minor"/>
                        </group>    
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" group="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name"/>
                <field name="tag_ids"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
                <field name="guardian"/>
                <filter name="male_patients" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="female_patients" string="Female" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter name="minor_patients" string="Minor" domain="[('is_minor', '=', True)]"/>
                <group expand="1" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by' : 'gender'}"/>
                    <filter name="group_by_tags" string="Tags" context="{'group_by' : 'tag_ids'}"/>
                    <filter name="group_by_is_minor" string="Is Minor" context="{'group_by' : 'is_minor'}"/>
                </group>
                <searchpanel>
                    <field name="gender" string="Gender" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hospital_patient_search"/>
        <field name="context">{'search_default_group_by_tags': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient
            </p>
        </field>
    </record>
</odoo>